<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageAbout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/standard_margin"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_heading"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title" />

    <include layout="@layout/item_contact_website_cta" />

    <include layout="@layout/item_contact_instagram_cta" />

    <include layout="@layout/item_contact_twitter_cta" />

    <include layout="@layout/item_contact_number_cta" />

    <include layout="@layout/item_location_cta" />
</LinearLayout>