<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listingTwitterCTA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="@dimen/card_max_elevation"
    android:focusable="true"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/separatorInstagram"
    tools:showIn="@layout/item_detail_page_about">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/overviewTwitterImageView"
        android:layout_width="@dimen/standard_icon_width"
        android:layout_height="@dimen/standard_icon_height"
        android:src="@drawable/ic_twitter_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listingTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="@id/overviewTwitterImageView"
        app:layout_constraintStart_toEndOf="@id/overviewTwitterImageView"
        app:layout_constraintTop_toTopOf="@id/overviewTwitterImageView"
        android:text="@string/follow_us_on_twitter" />

    <ImageView
        android:id="@+id/open_link"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_chevron_rounded_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorTwitter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/overviewTwitterImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>