<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchCardViewLayout"
    android:layout_width="match_parent"

    android:layout_height="@dimen/card_standard_height"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardMaxElevation="@dimen/card_max_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/standard_padding">

        <ImageView
            android:id="@+id/imageDiscoverImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/likeDiscoverImageView"
            android:layout_width="@dimen/standard_icon_width"
            android:layout_height="@dimen/standard_icon_height"
            android:src="@mipmap/ic_heart_curvy_outline"
            android:tint="@color/brown"
            app:layout_constraintEnd_toEndOf="@id/imageDiscoverImageView"
            app:layout_constraintTop_toTopOf="@id/imageDiscoverImageView" />

        <TextView
            android:id="@+id/nameDiscoverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_marginStart="164dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageDiscoverImageView"
            app:layout_constraintTop_toBottomOf="@+id/imageDiscoverImageView"
            tools:text="business name" />

        <ImageView
            android:id="@+id/verifiedImageView"
            android:layout_width="@dimen/standard_icon_height"
            android:layout_height="@dimen/standard_icon_height"
            android:padding="@dimen/small_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_checkmark"
            android:tint="@color/tw__blue_default"
            app:layout_constraintBottom_toBottomOf="@+id/nameDiscoverTextView"
            app:layout_constraintStart_toEndOf="@+id/nameDiscoverTextView"
            app:layout_constraintTop_toTopOf="@id/nameDiscoverTextView" />

        <TextView
            android:id="@+id/categoryDiscoverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintStart_toStartOf="@+id/nameDiscoverTextView"
            app:layout_constraintTop_toBottomOf="@id/nameDiscoverTextView"
            tools:text="category" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/locationIconDiscoverImageView"
            android:layout_width="@dimen/small_icon_width"
            android:layout_height="@dimen/small_icon_height"
            android:src="@mipmap/ic_location_pin_curvy_outline"
            android:tint="@color/gold"
            app:layout_constraintBottom_toBottomOf="@id/locationSearchTextView"
            app:layout_constraintStart_toStartOf="@+id/categoryDiscoverTextView"
            app:layout_constraintTop_toTopOf="@+id/locationSearchTextView" />

        <TextView
            android:id="@+id/locationSearchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/distance"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintStart_toEndOf="@+id/locationIconDiscoverImageView"
            app:layout_constraintTop_toBottomOf="@id/categoryDiscoverTextView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ratingIconDiscoverImageView"
            android:layout_width="@dimen/small_icon_width"
            android:layout_height="@dimen/small_icon_height"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:src="@mipmap/ic_star_curved_solid"
            android:tint="@color/gold"
            app:layout_constraintStart_toStartOf="@+id/locationIconDiscoverImageView"
            app:layout_constraintTop_toBottomOf="@+id/locationIconDiscoverImageView" />

        <TextView
            android:id="@+id/ratingValueSearchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="0.0"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintBottom_toBottomOf="@id/ratingIconDiscoverImageView"
            app:layout_constraintStart_toStartOf="@+id/locationSearchTextView"
            app:layout_constraintTop_toBottomOf="@+id/locationSearchTextView" />

        <TextView
            android:id="@+id/numberOfReviewsSearchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:text="(0 reviews)"
            android:textColor="@color/greyish"
            android:textSize="@dimen/text_size_body"
            app:layout_constraintBottom_toBottomOf="@+id/ratingValueSearchTextView"
            app:layout_constraintStart_toEndOf="@+id/ratingValueSearchTextView"
            app:layout_constraintTop_toTopOf="@+id/ratingValueSearchTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>