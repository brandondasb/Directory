<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.melaninwall.directory.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_listingFragment"
            app:destination="@id/listingFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.melaninwall.directory.view.SearchFragment"
        android:label="Search"
        tools:layout="@layout/search_fragment">
        <action
            android:id="@+id/action_searchFragment_to_listingFragment"
            app:destination="@id/listingFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.melaninwall.directory.view.ThirdFragment"
        android:label="Third"
        tools:layout="@layout/third_fragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.melaninwall.directory.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/profile_fragment" />
    <fragment
        android:id="@+id/listingFragment"
        android:name="com.melaninwall.directory.view.ListingFragment"
        android:label="Listing Fragment"
        tools:layout="@layout/listing_fragment" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.melaninwall.directory.view.ResultFragment"
        android:label="Result"
        tools:layout="@layout/result_fragment">
        <action
            android:id="@+id/action_resultFragment_to_listingFragment"
            app:destination="@id/listingFragment" />
    </fragment>
</navigation>